<article class="post">
  <div class="title">
    <div class="flex">
      <h2>{{title}}</h2>
      <span>Posted by {{user.username}} on {{format_date created_at}}</span>
    </div>
    <span class="content">{{post_content}}</span>
  </div>
  <div class="meta">
    {{vote_count}}
    {{format_plural "like" vote_count}}
    <a href="/post/{{id}}">{{comments.length}}
      {{format_plural "comment" comments.length}}</a>
  </div>
</article>